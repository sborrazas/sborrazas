<% # @param article [Hash] %>

<% content_for(:title) do %><%= article[:title] %><% end %>
<% content_for(:description) do %><%= article[:description] %><% end %>
<% content_for(:keywords) do %><%= article[:keywords] && ",#{article[:keywords]}" %><% end %>

<article class="blogpost">
  <header>
    <time><%= article[:date] %></time>
    <h1><%= article[:title] %></h1>
  </header>

  <section>
    <%= markdown article[:content] %>
  </section>
</article>

<nav class="blogpost-end">
  <p><a href="/">&laquo; Back</a></p>
</nav>

<% content_for :scripts do %>
  <script src="/assets/javascripts/lib/sh_main.js" type="text/javascript"></script>
  <script src="/assets/javascripts/lib/sh_ruby.js" type="text/javascript"></script>
  <script src="/assets/javascripts/lib/sh_css.js" type="text/javascript"></script>
  <script src="/assets/javascripts/lib/sh_javascript.js" type="text/javascript"></script>
  <script type="text/javascript">
    sh_highlightDocument();
  </script>
<% end %>

<% content_for :head do %>
  <link href="/assets/stylesheets/sh_acid.css?182817203" media="screen" rel="stylesheet" type="text/css" />
<% end %>
